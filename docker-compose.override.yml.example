# Development override - uses bind mounts for live code editing
# Copy this file to docker-compose.override.yml to use in development
#
# Usage:
#   cp docker-compose.override.yml.example docker-compose.override.yml
#   docker-compose up -d
#
# This will automatically merge with docker-compose.yml

version: '3.8'

services:
  app:
    volumes:
      # Bind mount for live code editing
      - ./src:/var/www/html
      - ./docker/php/php.ini:/usr/local/etc/php/conf.d/custom.ini:ro
    environment:
      - APP_ENV=local
      - APP_DEBUG=true

  nginx:
    volumes:
      # Bind mount for live static files
      - ./src/public:/var/www/html/public:ro
      - ./docker/nginx/default.conf:/etc/nginx/conf.d/default.conf:ro

  queue:
    volumes:
      - ./src:/var/www/html
    environment:
      - APP_ENV=local
      - APP_DEBUG=true

  queue-high:
    volumes:
      - ./src:/var/www/html
    environment:
      - APP_ENV=local
      - APP_DEBUG=true

  scheduler:
    volumes:
      - ./src:/var/www/html
    environment:
      - APP_ENV=local
      - APP_DEBUG=true
